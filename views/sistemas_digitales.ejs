<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistemas</title>
    <link rel="stylesheet" href="style.css">
    <style>
        *{
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            font-family: sans-serif;
        }
        h1{
            text-align: center;
            position: relative;
            width: 80%;
            margin: 50px auto;
        }
        body{
            background-color: #ecf4fb;
        }
        h1::before{
            content: "";
            display: block;
            width: 100%;
            height: 2px;
            position: absolute;
            background-color: black;
            top: 50%;
            z-index: -1;
        }
        h1 span{
            background-color:#ecf4fb;
            padding: 0 15px;
        }
        .img-gallery{
            width: 80%;
            margin: 50px auto 50px;
            display: grid;
            grid-template-columns: repeat(auto-fit,minmax(240px,1fr));
            gap: 30px;
        }
        .img-gallery img{
            width: 100%;
            cursor: pointer;
            transition: 1s;
        }
        .img-gallery img:hover{
            transform: scale(1.2);
        }
        .ful-img{
            width: 100%;
            height: 100vh;
            background-color: rgba(0, 0,0, 0.9);
            position: fixed;
            top: 0;
            left: 0;
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 99;
        }
        .ful-img span{
            position: absolute;
            top: 5%;
            right: 5%;
            font-size: 30px;
            color: #fff;
            cursor: pointer;
        }
        .ful-img img{
            width: 90%;
            max-width: 600px;
        }
        @media screen and (max-width:400px){
            h1{
                text-decoration: underline;
            }
            h1::before{
                display: none;
            }
            h1 span{
                padding: 0;
            }
        }
    </style>


</head>
<body>


    <h1><span>Sistemas</span></h1>

    <div class="img-gallery" id="galleryDiv">
        <img src= "https://images.wikidexcdn.net/mwuploads/wikidex/7/77/latest/20150621181250/Pikachu.png" onclick="openFulImg(this.src)" alt="">
    </div>

    <script src="script.js"></script>
    <script>
        const divParent = document.getElementById("galleryDiv");

        async function showImagesInDOM() {
            const response = await fetch('http://localhost:3001/productos-categoria?categoria=sistemas');
            console.log(response);
            const productos = await response.json();
            console.log("Productos: ");
            console.log(productos);

            const URLforImages = "http://localhost:3001/showImage/";
            for(it in productos){

                console.log(productos[it]);
                const producto = productos[it];
                console.log("Descripcion del producto: ")
                console.log(producto)

                //Creamos el div de cada imagen
                const newDivForImage = document.createElement("div");


                //Creamos cada imagen
                const newImageInsideDiv = document.createElement("img");
                console.log(URLforImages + producto.nombre_imagen);
                newImageInsideDiv.src = URLforImages + producto.nombre_imagen;

                //Creamos la descipcion del producto
                const newLabelProductInsideDiv = document.createElement("p");
                const productName = producto.nombre
                let newParagraphLabel = document.createTextNode(productName);
                newLabelProductInsideDiv.appendChild(newParagraphLabel);

                //Precio del producto
                const newLabelPriceInsideDiv = document.createElement("p");
                const priceProduct = 'Precio: ' + producto.precio;
                newParagraphLabel = document.createTextNode(priceProduct);
                newLabelPriceInsideDiv.appendChild(newParagraphLabel);

                //Hacemos el form
                const formInsideDiv = document.createElement("form");
                formInsideDiv.action = '/agregar-producto';
                formInsideDiv.method = 'POST';

                //Hacemos el boton del submit
                const newButtonOfSummit = document.createElement("button");
                const newButtonLabel = document.createTextNode("Agregar producto");
                newButtonOfSummit.appendChild(newButtonLabel);

                formInsideDiv.appendChild(newButtonOfSummit);

                //Metemos en el div
                newDivForImage.appendChild(newImageInsideDiv);
                newDivForImage.appendChild(newLabelProductInsideDiv);
                newDivForImage.appendChild(newLabelPriceInsideDiv);
                newDivForImage.appendChild(formInsideDiv);
                
                divParent.appendChild(newDivForImage); //Metemos el div en la galeria
            }
        }
        console.log("Hola a todos");
        showImagesInDOM();
    </script>
</body>
</html>